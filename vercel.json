{
    "version": 2,
    "buildCommand": "cd web && npm install && npm run build",
    "outputDirectory": "web/dist",
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "backend/api/index.go"
        },
        {
            "source": "/(.*)",
            "destination": "/index.html"
        }
    ],
    "functions": {
        "backend/api/index.go": {
            "maxDuration": 10
        }
    }
}